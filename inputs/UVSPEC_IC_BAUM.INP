#data_files_path ../data/

                         # Location of atmospheric profile file.
atmosphere_file          ../data/atmmod/afglms.dat

                         # Location of the extraterrestrial spectrum
source solar               ../data/solar_flux/kurudz_0.1nm.dat


wavelength 550           # wavelength

sza 30                   # solar zenith angle

zout toa                 # output altitude at top of atmosphere
umu 0.1 0.5 1            # viewing angles
phi 0 30 60 90

ic_file 1D ../examples/IC.DAT

ic_properties baum interpolate       # Specify Baum parameterization

rte_solver disort

quiet
